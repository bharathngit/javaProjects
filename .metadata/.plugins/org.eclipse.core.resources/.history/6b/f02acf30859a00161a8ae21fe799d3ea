	//This test sets up 4 indices from Index Watch Setting menu, by checking 4 check boxes and clicking Save
	@Test
	public void Set4IndicesFromIndexSettings() throws Exception{
		System.out.println("Starting Set4IndicesFromIndexSettings test");
		st.driver.manage().timeouts().implicitlyWait(100, TimeUnit.SECONDS);	//Implicit wait for elements to be displayed	
		
		//Open Settings
		st.driver.findElement(By.xpath("//android.view.View[contains(@resource-id,'indexWatch')]/android.view.View[contains(@resource-id,'openSettings')]/android.view.View[@index='0']")).click();
		
		//Un-selecting the default Indices
		st.driver.findElement(By.xpath("//android.view.View[contains(@content-desc,'SENSEX')]")).click();
		

		st.driver.findElement(By.xpath("//android.view.View[contains(@content-desc,'Nifty 50')]")).click();
		st.driver.findElement(By.xpath("//android.view.View[contains(@content-desc,'Nifty 500')]")).click();
		try {
			st.driver.findElement(By.xpath("//android.view.View[contains(@content-desc,'Bank')]")).click();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		/*
		st.driver.findElement(By.xpath("//android.view.View[@index='1']/android.view.View[@index='0']/android.view.View[contains(@content-desc,'Nifty 50')]")).click();
		st.driver.findElement(By.xpath("//android.view.View[@index='2']/android.view.View[@index='0']/android.view.View[contains(@content-desc,'Nifty 500')]")).click();
		st.driver.findElement(By.xpath("//android.view.View[@index='3']/android.view.View[@index='0']/android.view.View[contains(@content-desc,'Bank')]")).click();
		*/
		System.out.println("Found indices, now unchecking");
		
		//st.driver.navigate().back();
		
		
	}
